<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OctoberBranches">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/mallElArab_BranchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مول العرب"
                    android:textSize="30sp"
                    android:backgroundTint="@color/purple"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="50dp"/>

                <Button
                    android:id="@+id/dandyMall_BranchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="داندي مول"
                    android:textSize="30sp"
                    android:backgroundTint="@color/purple"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/mallElArab_BranchBtn"/>


                <Button
                    android:id="@+id/smartVillage_BranchBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="القرية الذكية"
                    android:textSize="30sp"
                    android:backgroundTint="@color/purple"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/dandyMall_BranchBtn"/>


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>